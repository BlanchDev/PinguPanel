{
  "name": "pingupanel",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev:react": "NODE_ENV=development bunx --bun vite",
    "dev:electron": "NODE_ENV=development bunx --bun electron .",
    "dev:all": "concurrently \"bun run dev:react\" \"bun run dev:electron\"",
    "build:react": "bunx --bun vite build",
    "build:electron": "bunx --bun electron-builder",
    "build:all": "bun run build:react && bun run build:electron"
  },
  "build": {
    "appId": "com.pingupanel.id",
    "productName": "PinguPanel",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ]
  },
  "dependencies": {
    "concurrently": "^9.1.0",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "eslint": "^9.13.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.11.0",
    "vite": "^5.4.10"
  }
}
