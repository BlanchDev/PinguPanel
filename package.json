{
  "name": "pingupanel",
  "private": true,
  "version": "0.0.1",
  "author": "blanch.dev",
  "description": "PinguPanel - Visual VPS management panel for web applications.",
  "homepage": "https://pingupanel.com",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev:react": "NODE_ENV=development bunx --bun vite",
    "dev:electron": "cross-env NODE_ENV=development bunx --bun electron .",
    "dev:all": "concurrently \"bun run dev:react\" \"bun run dev:electron\"",
    "build:react": "bunx --bun vite build",
    "build:electron": "cross-env electron-builder --win",
    "build:all": "bun run build:react && bun run build:electron"
  },
  "build": {
    "appId": "com.blanch.pingupanel",
    "productName": "PinguPanel",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "extraResources": [
      {
        "from": ".env",
        "to": ".env"
      }
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist-electron/${version}"
    },
    "win": {
      "target": [
        {
          "target": "portable"
        },
        {
          "target": "nsis"
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "asar": true,
    "compression": "maximum",
    "npmRebuild": false
  },
  "dependencies": {
    "concurrently": "^9.1.0",
    "dotenv": "^16.4.6",
    "electron-store": "^10.0.0",
    "million": "^3.1.11",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.0.1",
    "react-toastify": "^10.0.6",
    "sass": "^1.81.1",
    "sass-embedded": "^1.81.1",
    "ssh2": "^1.16.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "cross-env": "^7.0.3",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9.13.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.11.0",
    "vite": "^5.4.10"
  },
  "trustedDependencies": [
    "@parcel/watcher"
  ]
}
